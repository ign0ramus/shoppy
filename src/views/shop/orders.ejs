<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/orders.css">
    </head>

	<body>
        <%- include('../includes/navigation.ejs') %> 
        <main>
            <% if (orders.length > 0) { %> 
                <ul class="orders">
                    <% orders.forEach(order => { %>
                    <li class="orders__item">
                        <h4>#<%= order.id.slice(-4, order.id.length) %></h4>
                        <a target="_blank" href="/orders/<%= order.id %>">Invoice.pdf</a>
                        <ul class="orders__products">
                            <% order.products.forEach(product => { %>
                                <li class="orders__products-item"><%= product.title %>, Quantity: <%= product.quantity %></li>
                            <% }); %>
                        </ul>
                    </li>
                <% }); %>
                </ul>
            <% } else { %>
                <h2>Nothing here!</h2>
            <% } %>
        </main>
    <%- include('../includes/end.ejs') %>
