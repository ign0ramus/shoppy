	<body>
        <%- include('../includes/navigation.ejs') %> 
        <main class="centered">
            <h1><%= product.title %></h1>
            <hr>
            <div class="image">
                <img src="/<%= product.imageUrl %>" alt="<%= product.title %>">
            </div>
            <h2>$<%= product.price %></h2>
            <p class="description"><%= product.description %></p>
            <% if (product.userId.toString() !== (userId ? userId.toString() : '')) { %>
                <%- include('../includes/add-to-cart.ejs') %>
            <% } else { %>
                <span class="info">It is your product</span>
            <% } %>
        </main>
    <%- include('../includes/end.ejs') %>
