<%- include('../includes/head.ejs') %> 
	</head>

	<body>
        <%- include('../includes/navigation.ejs') %> 
        <main>
            <% if (orders.length > 0) { %> 
                <ul>
                    <% orders.forEach(order => { %>
                    <li>
                        <h3>#<%= order.id %></h3>
                        <ul>
                            <% order.products.forEach(product => { %>
                                <li><%= product.title %> (<%= product.quantity %>)</li>
                            <% }); %>
                        </ul>
                    </li>
                <% }); %>
                </ul>
            <% } else { %>
                <h2>Nothing here!</h2>
            <% } %>
        </main>
    <%- include('../includes/end.ejs') %>
