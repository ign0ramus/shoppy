<section class="pagination">
	<% if (page != 1 && prevPage != 1) { %>
	<a href="?page=1">1</a>
	<% } %> <% if (hasPrevPage) { %>
	<a href="?page=<%= prevPage %>"><%= prevPage %></a>
	<% } %>
	<a class="active" href="/?page=<%= page %>"><%= page %></a>
	<% if (hasNextPage) { %>
	<a href="?page=<%= nextPage %>"><%= nextPage %></a>
	<% } %> 
	<% if (lastPage != page && lastPage != nextPage) { %> <% if (lastPage > 3) { %>
	<span>...</span>
	<% } %>
	<a href="?page=<%= lastPage %>"><%= lastPage %></a>
	<% } %>
</section>
