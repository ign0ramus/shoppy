<%- include('../includes/head.ejs') %> 
		<link rel="stylesheet" href="/css/product.css" />
	</head>

	<body>
		<%- include('../includes/navigation.ejs') %> 

		<main>
			<% if (products.length > 0) { %>
			<div class="grid">
				<% products.forEach(product => { %>
				<article class="card product-item">
					<%- include('../includes/product-info.ejs', {product}) %>
					<div class="card__actions">
                        <a href="/admin/edit-product/<%= product.id %>" class="btn">Edit</a>
						<button onclick="handleDeleteProduct(this)" type="button" class="btn">Delete</button>
						<input hidden name="id" value="<%= product.id%>">
						<input hidden name="_csrf" value="<%= csrfToken %>" />
					</div>
				</article>
				<% }); %>
			</div>
			<% } else { %>
			<h1>No products found</h1>
			<% } %>
		</main>
		<%- include('../includes/end.ejs') %>
		<script src="/js/admin.js"></script>
