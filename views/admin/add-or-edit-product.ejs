<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %> 

    <main>
        <form class="product-form" action="/admin/<%= product ? 'edit-product' : 'add-product' %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" value="<%= product ? product.title : '' %>" name="title" id="title">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image Url</label>
                <input type="text" value="<%= product ? product.imageUrl : '' %>" name="imageUrl" id="imageUrl">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" value="<%= product ? product.price : '' %>" step="0.01" name="price" id="price">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%= product ? product.description : '' %></textarea>
            </div>
            <% if (product) { %> <input name="id" hidden value="<%= product._id %>"> <% } %>
            <button class="btn" type="submit"><%= product ? 'Update Product' : 'Add Product' %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>